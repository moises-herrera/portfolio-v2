---
import { type TimelineItemData } from '../../types/timeline-item-data';

interface Props extends TimelineItemData {}

const {
  title,
  company,
  location,
  description,
  startDate,
  endDate,
  listTitle,
  items,
} = Astro.props;
---

<li class="mb-10 ms-6">
  <span
    class="absolute top-1 flex items-center justify-center w-6 h-6 bg-accent rounded-full -start-3 ring-8 ring-white"
  >
  </span>
  <div class="ml-3 space-y-2">
    <h3 class="mb-1 text-xl font-bold text-accent">
      {title}
    </h3>
    <h4 class="text-xl font-semibold text-secondary">
      {company}
    </h4>
    <p class="text-base font-normal text-secondary-gray">
      {location}
    </p>
    <time class="block text-sm font-normal leading-none text-secondary-gray">
      {startDate} - {endDate || 'Actualidad'}
    </time>

    {
      description ? (
        <p class="text-base font-normal text-secondary-gray text-pretty">
          {description}
        </p>
      ) : null
    }

    <h4 class="text-base font-semibold text-secondary">
      {listTitle}
    </h4>
    <ul class="list-disc ml-5">
      {
        items?.map((item) => (
          <li class="text-base font-normal text-secondary-gray">{item}</li>
        ))
      }
    </ul>
  </div>
</li>
